<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>SteamTotp</Title>
    <Authors>JeremyEspresso</Authors>
    <PackageIcon>icon.png</PackageIcon>
    <RootNamespace>JeremyEspresso.SteamTotp</RootNamespace>
    <Description>A .NET library to generate Steam TOTP codes</Description>
    <Copyright>JeremyEspresso</Copyright>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/JeremyEspresso/SteamTotp</RepositoryUrl>
    <PackageTags>SteamTotp;Steam;Totp;Auth</PackageTags>
    <PackageProjectUrl>https://github.com/JeremyEspresso/SteamTotp</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
